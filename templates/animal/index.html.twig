{% extends 'admin/index.html.twig' %}

{% block title %}Liiste des animaux{% endblock %}

{% block body %}
    <h1 class="h1-Admin">Liste des animaux</h1>

    <a class="title_create" href="{{ path('animal_new') }}"> <button class="btn btn-secondary">Ajouter</button></a>

        {% for animal in animals %}
            <div class="card mb-3 margeHome">
                <div class="row no-gutters">
                    <div class="col-md-4 image">
                        <img src="{{ asset( '/build/'~animal.image ) }}" class="card-img"
                             alt="Photo de {{ animal.name }}">
                    </div>
                    <div class="col-md-8 text">
                        <div class="card-body textcard">
                            <h2 class="card-title">{{ animal.name | title }}</h2>
                            <p>
                                <a href="{{ path('animal_show', {'id': animal.id}) }}"> <button class="btn btn-secondary">Voir</button></a>
                                <a href="{{ path('animal_edit', {'id': animal.id}) }}"> <button class="btn btn-secondary">Modifier</button></a>
                            </p>
                            <p class="card-text">
                                {{ animal.description }}
                            </p>
                        </div>
                    </div>
                </div>
            </div>

        {% else %}
                <p>Aucun animal trouv√©</p>
        {% endfor %}

{% endblock %}
