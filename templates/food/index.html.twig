{% extends 'admin/index.html.twig' %}

{% block title %}Food index{% endblock %}

{% block body %}
<div class="flex-column text-center">
    <h1 class="h1-Admin">Liste des aliments</h1>

    <a href="{{ path('food_new') }}"><button class="btn btn-secondary mb-3 center-button">
            Ajouter un nouvel aliment</button>
    </a>

    <table class="table">
        <thead>
            <tr>
                <th>Type</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for food in foods %}
            <tr>
                <td>{{ food.type }}</td>
                <td>{{ food.description }}</td>
                <td>
                    <a href="{{ path('food_show', {'id': food.id}) }}"><button class="btn btn-secondary">Voir</button></a>
                    <a href="{{ path('food_edit', {'id': food.id}) }}"><button class="btn btn-secondary">Modifier</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas de donnée renseignée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


</div>
{% endblock %}
