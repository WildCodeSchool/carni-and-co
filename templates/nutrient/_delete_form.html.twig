<form method="post" action="{{ path('nutrient_delete', {'id': nutrient.id}) }}" onsubmit="return confirm('Êtes vous sûr(e) de vouloir supprimer cet élément?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ nutrient.id) }}">
    <button class="btn btn-danger button-suppr-nutrient">Supprimer le nutriment</button>
</form>
