{% extends 'admin/index.html.twig' %}

{% block title %}Modifier type de nutriment{% endblock %}

{% block body %}
    <div class="flex-column text-center">
        <h1 class="h1-Admin">Modifier un type de nutriment</h1>

        {{ include('/admin/nutrient_type/_form.html.twig', {'button_label': 'Valider les modifications'}) }}

        {{ include('/admin/nutrient_type/_delete_form.html.twig') }}
        {% if nutrient_type.ingredients is not empty %}
            <p class="alert-danger mt-2"><i class="fas fa-exclamation-circle"></i>
                Attention si vous supprimez ce type de nutriment, tous les ingrédients liés seront également supprimés</p>
        {% endif %}

        <a href="{{ path('nutrient_type_index') }}">
            <button class="btn btn-secondary mb-3 mt-3">← Retour à la liste</button>
        </a>
    </div>
{% endblock %}
