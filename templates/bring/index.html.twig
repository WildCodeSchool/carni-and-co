{% extends 'base.html.twig' %}

{% block title %}Apport index{% endblock %}

{% block body %}
    <div class="flex-column text-center">
    <h1 class="h1-Admin">Apport index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Calories</th>
            <th>Ratio Protido-Calorique</th>
            <th>Proteines</th>
            <th>Lipides</th>
            <th>Cendres</th>
            <th>Fibres</th>
            <th>Humidit√©s</th>
            <th>Glucides</th>
            <th>Calciums</th>
            <th>Phosphores</th>
            <th>Rapport Phosphocalcique</th>
            <th>Omega 6</th>
            <th>Omega 3</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for bring in brings %}
            <tr>
                <td>{{ bring.calorie }}</td>
                <td>{% if bring.calorie != 0 %} {{ (bring.protein  /  bring.calorie * 10)|round }}
                    {% endif %}</td>
                <td>{{ bring.protein }}</td>
                <td>{{ bring.lipid }}</td>
                <td>{{ bring.ash }}</td>
                <td>{{ bring.fiber }}</td>
                <td>{{ bring.humidity }}</td>
                <td>{{ bring.carbohydrate }}</td>
                <td>{{ bring.calcium }}</td>
                <td>{{ bring.phosphorus }}</td>
                <td>{% if bring.phosphorus !=0 %} {{ bring.calcium / bring.phosphorus }}
                    {% endif %}</td>
                <td>{{ bring.omega6 }}</td>
                <td>{{ bring.omega3 }}</td>
                <td>
                    <a href="{{ path('bring_edit', {'id': bring.id}) }}"><button class="btn btn-secondary mb-1">Modifier</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="15">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('bring_new') }}"><button class="btn btn-secondary mb-1">Ajouter un apport</button></a>
    </div>
{% endblock %}
