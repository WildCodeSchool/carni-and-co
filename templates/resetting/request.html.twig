{% extends 'layout.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    <div class="container-fluid pagePassword">
        <h1 class="text-center titlePassword">Mot de passe oublié ?</h1>
        <p class="text-center mt-5">Demandez à réinitialiser votre mot de passe en renseignant votre mail.</p>

        {{form_start(form)}}
        <div class="d-flex justify-content-center">
            <div class="text-center">
                {{ form_row(form.email, { 'label' : 'Mail'}) }}
            </div>
        </div>
        <div class="d-flex justify-content-center">

            <button class="btn btn-gold mt-4" type="submit">Envoyer</button>
        </div>
        {{form_end(form)}}
    </div>

{% endblock %}
