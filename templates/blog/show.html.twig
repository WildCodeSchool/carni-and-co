{% extends 'layout.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1 class="h1-User">Article</h1>
    <div class="row">
        <div class="col-12 p-3">
            <p class="h2-inside-article">
                {{ article.title }}
            </p>
        </div>
    </div>
    <div class="flex-column p-3">
        <img class="image-inside-article mr-2" src="{{ vich_uploader_asset(article, 'imageFile') }}" alt="{{ article.image }}">
        <p class="psizearticle">
            {{ article.description }}
        </p>
    </div>
    <div class="col-12">
        {{ article.date ? article.date|date('Y-m-d H:i:s') : '' }}
    </div>
    <a href="{{ path('blog_index') }}">
        <button class="btn btn-secondary mb-3">Retour au blog</button>
    </a>
{% endblock %}
